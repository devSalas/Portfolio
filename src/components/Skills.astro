---
import { MySkills } from "../data/skill";
import Skill from "./Skill.astro";
import Section from "./ui/Section.astro";
---

<Section
  id="skills"
  title="Mis Skills"
  subtitle="Mis herramientas con los que hago realidad cualquier proyecto"
>
  <div class="grid  grid-cols-2 md:grid-cols-4 gap-6">
   {
    MySkills.map((skill)=>(
        <Skill name={skill.name} image={skill.url } width={skill.width}  classN={skill.classN} />
    ))
   }
  </div>
</Section>
