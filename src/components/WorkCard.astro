---
interface Props {
  title: string;
  description: string;
  image: string;
  link: string;
  video?: string;
  tag?: string
  color?: string
}

const { title, description, image, link, video, tag, color } = Astro.props;
---

<article class="flex flex-col gap-6">
  <!-- <img
    class="aspect-video bg-slate-900/50 rounded-2xl object-cover object-top"
    src="https://cdn.dribbble.com/userupload/15145985/file/original-0ae73dc42ffb2d40a603154811b4a7c5.png?resize=1200x900"
    alt=""
  /> -->
  <div class="relative">
    <a
      href={link}
      target="_blank"
      class="absolute w-full h-full cursor-pointer z-10"
    >
    </a>
    <video
      src={video}
      loop
      autoplay
      muted
      preload="auto"
      class="w-full opacity-80 rounded-2xl"></video>
  </div>

  <h3 class="text-slate-300 md:text-2xl text-xl font-bold">{title}</h3>
  {color && tag  && <p><span class={color + " inline-block  rounded-xl text-white text-[12px] px-3 py-1"}>{tag}</span></p> }
  <p class="text-slate-400 text-balance">
    {description}
  </p>
</article>

<style>
  article {
    @apply bg-slate-900/10 p-6 border border-slate-900 rounded-3xl;
  }
</style>
