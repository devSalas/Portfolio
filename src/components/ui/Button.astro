---
interface Props {
  href: string;
}
const { href } = Astro.props;
---

<a
  class="block bg-gradient-to-r from-purple-600 to-violet-900 border border-violet-900 border-t-violet-600 border-r-violet-700 brightness-100 hover:brightness-125 text-slate-200 font-bold md:py-4 py-3 md:px-8 px-6 rounded-full transition-all duration-500"
  href={href} target="_blank"
>
  <slot />
</a>
